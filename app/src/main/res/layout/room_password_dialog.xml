<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewRoomId_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Room ID"
        android:textAlignment="center"
        android:textColor="@color/AppColor"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextRoomPassword_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPersonName"
        android:background="@drawable/plaintext_bg"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textViewRoomId_d"
        app:layout_constraintStart_toStartOf="@+id/textViewRoomId_d"
        app:layout_constraintTop_toBottomOf="@+id/textViewRoomId_d" />
</androidx.constraintlayout.widget.ConstraintLayout>